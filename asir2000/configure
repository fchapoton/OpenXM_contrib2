#!/bin/sh
# $OpenXM: OpenXM_contrib2/asir2000/configure,v 1.3 2000/03/01 02:29:16 noro Exp $

use_plot=1
use_pari=1
use_interval=1
use_fep=1
oxhome=/usr/local

if [ -d ../../OpenXM ]; then
oxhome=`( cd ../../OpenXM ; pwd )`
fi

while [ $# -gt 0 ]
do
	case $1 in
	-oxhome)
		shift; oxhome=$1 ;;
	-plot)
		use_plot=1 ;;
	-pari)
		use_pari=1 ;;
	-interval)
		use_interval=1 ;;
	-fep)
		use_fep=1 ;;
	esac
	shift
done

libname=libasir

rm -f include/config.h
echo "#define OpenXM_HOME ${oxhome}" >> include/config.h

#cat > include/config.h <<EOF
##define OpenXM_HOME ${oxhome}
#EOF

if [ $use_pari != 0 ]; then
libname=$libname"_pari"
echo "#define USE_PARI" >> include/config.h
fi

if [ $use_plot != 0 ]; then
libname=$libname"_X"
echo "#define USE_PLOT" >> include/config.h
fi

if [ $use_interval != 0 ]; then
libname=$libname"_itv"
echo "#define USE_INTERVAL" >> include/config.h
fi

if [ $use_fep != 0 ]; then
echo "#define USE_FEP" >> include/config.h
fi

echo LIBASIR=$libname.a >> include/config.h

